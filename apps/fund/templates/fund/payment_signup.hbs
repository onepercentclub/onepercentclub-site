{% load i18n bb_ember static %}

{% tplhandlebars "paymentSignup" %}

    <div class="l-content">

        <a {{action openInBox "login"}} class="btn-login"><span class="flaticon solid lock-1"></span> <strong>{% trans "Have an account?" %}</strong><br /> {%  trans "Log in here" %}</a>

        <form>
            <legend>
                <strong>{% trans "Your name with your donation?" %}</strong>
                <p>{% trans "Create an account with just one click." %}.</p>
            </legend>
            <fieldset>
                <ul>
                    <li class="control-group">
                        <div class="half half-center">
                            <button {{action openInBox "signup"}} class="btn btn-iconed btn-primary">
                                <span class="flaticon social facebook-1"></span>{% trans "Sign up" %}
                            </button>
                            <ul class="bullets">
                                <li>
                                    {% trans "Keep it personal, you name will show with your donation." %}
                                </li>
                                <li>
                                    {% trans "We keep you posted." %}
                                </li>
                                <li>
                                    {% trans "Faster future donations." %}
                                </li>
                                <li>
                                    {% trans "Keep track of all of your donations." %}
                                </li>
                                <li class="alternative">
                                    <a {{action "nextStep"}}>{% trans "Skip and stay anonymous"%}</a>
                                </li>
                            </ul>
                        </div>
                    </li>
                </ul>
            </fieldset>
        </form>
    </div>

    <div class="l-sidebar">

    </div>

{% endtplhandlebars %}
