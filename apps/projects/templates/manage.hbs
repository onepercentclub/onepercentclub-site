                            {{view Em.TextField valueBinding="address.line2" classBinding="address.errors.line2.length:error"}}
                        </div>

                        {{#if address.errors.line2 }}
                            <div class="errors">{{#each address.errors.line2 }}<p>{{this}}</p>{{/each}}</div>
                        {{/if}}
                    </li>


                    <li class="control-group has-popover" data-content="{% trans "City or village.." %}">
                        <label class="control-label">{% trans "City" %}</label>
                        <div class="controls">
                            {{view Em.TextField valueBinding="address.city" classBinding="address.errors.city.length:error"}}
                        </div>

                        {{#if address.errors.city }}
                            <div class="errors">{{#each address.errors.city }}<p>{{this}}</p>{{/each}}</div>
                        {{/if}}
                    </li>

                    <li class="control-group has-popover" data-content="{% trans "Postal code" %}">
                        <label class="control-label">{% trans "Postal code" %}</label>
                        <div class="controls">
                            {{view Em.TextField valueBinding="address.postal_code" classBinding="address.errors.postal_code.length:error"}}
                        </div>

                        {{#if address.errors.postal_code }}
                            <div class="errors">{{#each address.errors.postal_code }}<p>{{this}}</p>{{/each}}</div>
