                        <div class="controls">
                            {{view Em.TextField valueBinding="address.line1" classBinding="address.errors.line1.length:error"}}
                        </div>

                        {{#if address.errors.line1 }}
                            <div class="errors">{{#each address.errors.line1 }}<p>{{this}}</p>{{/each}}</div>
