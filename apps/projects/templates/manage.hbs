        <fieldset>
            <ul>
                <li class="control-group has-popover" data-content="{% trans "Choose your organisation from the list or create a new one." %}">
                    <label class="control-label">{% trans "Organisation" %}</label>
                    <div class="controls">
                        <ul>
                            {{#each organizations}}
                                <li>
                                    <h4>{{this.name}}</h4>
                                    {{this.description}}
                                    <br/>
                                    <a {{action selectOrganization this}}>{% trans "Select" %}</a>
                                </li>
                            {{/each}}
                            <li>
                                <h4>{% trans "create new" %}</h4>
                                {% trans "Create a new organization to run this project." %}
                                <br/>
                                <a {{action createNewOrganization organization}}>{% trans "Create" %}</a>
                            </li>
                        </ul>
                    </div>
                </li>
            </ul>
        </fieldset>
    {{/if}}

{% endtplhandlebars %}


